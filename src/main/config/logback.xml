<configuration scan="true" scanPeriod="10 seconds">

    <appender name="STANDARD" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%-2(%d{dd MMM yyyy HH:mm:ss.SSS}) |-%-5level %class{0}: %method{20} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="MESSAGES" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%-2(%d{dd MMM yyyy HH:mm:ss.SSS}) |-%-5level %class{0}: %method{20} - %msg%n</pattern>
            <pattern>%d{HH:mm:ss} | %m%n</pattern>
        </encoder>
    </appender>

    <logger name="protocol" level="DEBUG" additivity="false">
        <appender-ref ref="MESSAGES"/>
    </logger>

    <logger name="org.apache.commons" level="WARN"/>

    <root>
        <level value="DEBUG"/>
        <!--
                <appender-ref ref="STRICT"/>
        -->
        <appender-ref ref="MESSAGES"/>
    </root>

</configuration>