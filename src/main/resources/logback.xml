<configuration scan="true" scanPeriod="10 seconds">


	<!--  messages log configuration -->

	<appender name="messages.appender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>/tmp/messages.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>messages.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>3</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyyMMdd-HH:mm:ss} | %m%n</pattern>
		</encoder>
	</appender>

    <logger name="protocol" level="INFO" additivity="false">
        <appender-ref ref="messages.appender"/>
    </logger>


	<!--  main log configuration -->

    <appender name="main.appender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%-2(%d{dd MMM yyyy HH:mm:ss.SSS}) |-%-5level %class{0}: %method{20} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.commons" level="WARN"/>
    <logger name="org.eclipse" level="WARN"/>

    <root>
        <level value="INFO"/>
		<appender-ref ref="main.appender"/>
    </root>

</configuration>